@Library('rakesh-shared-library') _

pipeline {
      agent any 
      stages { 

        stage( 'Performing lint checks') {
            steps {
                    sh "echo installing jslint"
                    sh "echo performing lint checks"
                    sh "echo performing lint checks completed"
           }
       }

        stage ('Downloading the dependencies') {
            steps {
            ssh "npm install"
           }
        }
    }
}